<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    /* CSS styles for containers */
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }
    .container-wrapper {
      height: 70%; /* Adjust the height as desired */
      width: 70%;
      margin-left: auto;
      margin-right: auto;
      display: flex; /* Added */
      align-items: flex-start; /* Added */
    }
    .container {
      border: 0px solid #000;
      width: 100%;
      height: 100%;
      margin-bottom: 100px;
      opacity: 0;
      transition: opacity 1s;
      display: flex;
      flex-direction: row; /* Updated */
      position: relative; /* Added */
    }
    .container .content {
      flex: 1; /* Added */
      padding: 20px; /* Added */
    }
    .container h4, h2, p {
      margin-bottom: 0px;
      margin-top: 0px;
    }
    .container h4 {
      margin-top: 40px;
      margin-bottom: 20px;
    }
    .container h2 {
      font-size: 72px;
      margin-top: 0px;
    }
    .container h3 {
      margin-right: 25%;
    }
    footer {
      padding: 20px;
      text-align: center;
      width: 100%;
      margin-top: 0px;
    }
    .icons {
      display: flex;
      justify-content: left;
      gap: 10px;
      margin-top: 20px;
      margin-left: 0px;
    }
    .icons a {
      color: #000;
      font-size: 32px;
      transition: color 0.3s;
    }
    .icons a:hover {
      color: #aaa;
    }
    .tabs-container {
      position: absolute;
      top: -50px;
      right: 0px;
      display: flex;
      flex-direction: column;
      align-items: flex-end;
    }
    .tabs {
      display: flex;
      flex-direction: column;
      padding: 20px 0;
      margin-top: 10px;
    }
    .tabs button {
      display: inline-block;
      margin-bottom: 10px;
      width: fit-content; /* Adjusted */
      background: none; /* Added */
      border: none; /* Added */
      font-size: 32px;
      text-align: right;
      margin-left: auto;
    }
    .tabs button.active {
      text-decoration: underline; /* Added */
    }
    .content {
      display: none;
      flex: 1; /* Added */
      padding: 20px; /* Added */
    }
    .content.active {
      display: block;
    }
    .tab.hidden {
      opacity: 0;
    }
    .experience-item.final {
      margin-bottom: 500px;
    }
    .tab-wrapper {
      margin-top: -50px;
    }
  </style>
  <script>
    function checkVisibility() {
      var containers = document.querySelectorAll('.container');
      var viewportHeight = window.innerHeight;

      containers.forEach(function(container) {
        var containerTop = container.getBoundingClientRect().top;
        var containerBottom = container.getBoundingClientRect().bottom;

        if (containerTop < viewportHeight * 0.75 && containerBottom > 0) {
          container.style.opacity = 1; // Make container visible
        }
      });
    }
    document.addEventListener('DOMContentLoaded', function() {
      checkVisibility();

      window.addEventListener('scroll', function() {
        checkVisibility();
      });

      // Handle tab clicks
      var tabs = document.querySelectorAll('.tabs button');
      var contents = document.querySelectorAll('.content');

      tabs.forEach(function(tab) {
        tab.addEventListener('click', function() {
          // Remove active class from all tabs and contents
          tabs.forEach(function(tab) {
            tab.classList.remove('active');
          });
          contents.forEach(function(content) {
            content.classList.remove('active');
          });

          // Add active class to the clicked tab and corresponding content
          tab.classList.add('active');
          var targetContentId = tab.getAttribute('data-target');
          var targetContent = document.getElementById(targetContentId);
          targetContent.classList.add('active');
        });
      });
    });
  </script>
</head>
